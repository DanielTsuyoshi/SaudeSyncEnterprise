@model IEnumerable<SaudeSync.Entities.Medico>

@{
    ViewData["Title"] = "Lista de Médicos";
}

<h1>Lista de Médicos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Médico</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CRM</th>
            <th>Especialidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medico in Model)
        {
            <tr>
                <td>@medico.Id</td>
                <td>@medico.Nome</td>
                <td>@medico.CRM</td>
                <td>@medico.Especialidade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@medico.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@medico.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@medico.Id" class="btn btn-danger"
                       onclick="return confirm('Tem certeza de que deseja excluir este médico?')">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    // Se necessário, adicione scripts aqui
}
